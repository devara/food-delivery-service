{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
      "comma-dangle": ["error", "never"],
      "semi": [2, "always"],
      "space-before-function-paren": ["error", "always"]
    }
}
